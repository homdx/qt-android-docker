RUN cd /android-sdk-linux/tools/bin && ./sdkmanager "build-tools;29.0.2" && \
echo build OpenSSL from sources && \
export NDK_VERSION=r19c && \
export    ANDROID_NDK_ARCH=arch-arm c && \
export    ANDROID_NDK_EABI=llvm c && \
export    ANDROID_NDK_HOST=linux-x86_64 c && \
export    ANDROID_NDK_TOOLCHAIN_PREFIX=arm-linux-androideabi c && \
export    ANDROID_NDK_TOOLCHAIN_VERSION=4.9 c && \
export DEBIAN_FRONTEND=noninteractive c && \
export ANDROID_NDK_HOME=/android-ndk-r19c && \
cd / && git clone https://github.com/homdx/android_openssl.git && cd /android_openssl && git checkout 5140 && \
cd /android_openssl/ && git checkout 5140  && echo patch -p0 ssl.patch \
&& mkdir ~/android && ln -s /android-ndk-r19c ~/android/ndk-bundle && cd /android_openssl && time ./build_ssl.sh \
&& echo build done && \
ls -la arm


COPY build-from-source.sh /build-from-source.sh

RUN time /build-from-source.sh && echo ok build && date || echo error build && date

