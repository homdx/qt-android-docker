RUN apt-get install time -y  && cd / && curl -SL https://download.qt.io/archive/qt/5.13/5.13.2/single/qt-everywhere-src-5.13.2.tar.xz -o qt-5132.tar.gz && \
    set +ex && echo "${QT_HASH}  qt-5132.tar.gz" | sha512sum -c  \
